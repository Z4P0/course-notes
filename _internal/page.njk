<!doctype html>
<html lang="en-US">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% if title %}
      <title>{{ title }} â€¢ {{ config.course }}</title>
    {% else %}
      <title>{{ config.course }}</title>
    {% endif %}
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body>
    <div class="container">
      <header>
        <p>
          <strong>
            <a href="/">{{ config.course }}</a>
          </strong>
        </p>
        <ul>
        {%- for lesson in collections.lesson -%}
          {# <li>{{ lesson.data.title }}</li> #}
          <li{% if page.url == lesson.url %} aria-current="page"{% endif %}>
            <a href="{{ lesson.url }}">
              {{ lesson.data.title }}
            </a>
          </li>
        {%- endfor -%}
        </ul>
      </header>
      <hr/>
      <main>
        {{ content | safe }}
      </main>
    </div>
  </body>
</html>
